<%= form_with model: @animals do |form| %>

<div>
<%= form.label :age %>
<%= form.number_field :age %>
</div>
<br/>

<div>
<%= form.label :color %>
<%= form.color_field :color %>
</div>
<br/>

<div>
<%= form.label :weight %>
<%= form.number_field  :weight %>
</div>
<br/>

<div>
<%= form.label :species %>
<%= form.text_field :species %>
</div>
<br/>

<div>
<%= form.submit "create" %>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
</div>
<% end %>